<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParent.SideMargin">
        <item name="android:layout_marginStart">@dimen/general_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/general_side_margin</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.Centered">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="WrapContent.Centered.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="WrapContent.Left">
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="WrapContent.Left.Light">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="WrapContent.Right">
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="WrapContent.Left.CheckBox">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">@dimen/edit_text</item>
    </style>

    <style name="EditText.White">
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="Widget.MaterialComponents.Button.UnelevatedButton.BigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="cornerRadius">8dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/orange</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.BigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="cornerRadius">8dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/orange</item>
    </style>


    <style name="MyButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="cornerRadius">8dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/orange</item>
    </style>

</resources>